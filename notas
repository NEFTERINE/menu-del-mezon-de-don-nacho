/* -- general -- */

/* --- ESTILOS DEL MODAL DE INICIO DE SESIÓN --- */

.modal-sesion { /* Estilos del fondo del modal */
    position: fixed; 
    z-index: 1000; /* Asegura que el modal esté por encima de otros elementos */
    left: 0;
    top: 0;
    width: 100%; /* Ancho completo */
    height: 100%;
    background-color: rgba(255, 255, 255, 0.6); 
    display: flex; /* Usamos Flexbox para centrar el contenido */
    justify-content: center; /* Centrado horizontal */
    align-items: center; /* Centrado vertical */
}

.modal-contenido-sesion { /* Estilos del contenido del modal */
    background-color: #d8d8d8; 
    padding: 20px;
    /* border: 1px solid #000000; */
    width: 25%; 
    height: 45%;
    min-height: 300px; /* Se agregó para que tenga una altura mínima */
    max-width: 900px; /* Se aumentó el ancho máximo para mejor visualización */
    border-radius: 20px; 
    text-align: left; /* Alineación a la izquierda para el contenido */
    box-sizing: border-box; /* Asegura que el padding no incremente el ancho/alto */
    position: relative; /* Necesario para posicionar el botón de atrás */
}

/* -- formulario-- */

form {
    background-color: #616161; 
    padding: 30px; /* Aumentamos el padding para mejor estética */
    width: 350px; /* Ancho fijo para control en la pantalla */
    max-width: 90%; /* Asegura que se vea bien en móvil */
    height: auto; /* Altura automática basada en el contenido */
    text-align: left;
    box-sizing: border-box;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.4);
    margin: 100px auto;
    border-radius: 10px;
}

label, p {
    font-size: 1em; 
    font-family: 'Arial', sans-serif;
    margin-bottom: 3px; /* Más espacio debajo de la etiqueta */
    display: block; 
    color: #000000; 
    padding: 0;
}

/* Reglas de estilo para todos los inputs de texto y áreas de texto */
input, textarea {
    width: 100%;
    padding: 8px 5px; /* Padding interno para mejor usabilidad */
    margin: 5px 0 15px 0; /* Margen inferior para separar campos */
    border: 1px solid #999; /* Borde suave */
    border-radius: 5px; /* Bordes redondeados */
    background-color: #e9e9e9;
    box-sizing: border-box; /* Incluye padding y border en el ancho total */
}

textarea { 
    resize: vertical;
    min-height: 30px; /* Altura mínima más útil */
}

input:focus, textarea:focus { 
    outline: none;
    border-color: #ffaf04; /* Resaltamos el borde al enfocar */
    box-shadow: 0 0 5px #f7c251(0, 177, 184, 0.5);
}


/* -- Botón de Envío -- */
input[type="submit"] { 
    background-color: #f7c251; 
    color: rgb(0, 0, 0); 
    padding: 10px ; 
    cursor: pointer;
    text-transform: uppercase; 
    width: 100%; /* El botón ocupa todo el ancho */
    border: none;
    margin-top: 20px;
}

input[type="submit"]:hover , button:hover { 
    background-color: #f7c251;
    color: rgb(255, 255, 255);
}



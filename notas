document.addEventListener('DOMContentLoaded', function() {
    
    // Obtener elementos est치ticos
    const modalP = document.getElementById("editar-platillos");
    const contenedorEstatico = document.getElementById("lista-pedidos"); // Cambia este ID al contenedor real
    const btnCerrarP = document.querySelector(".C-editar-P");

    if (contenedorEstatico && modalP) {
        
        // Adjuntamos el evento al contenedor padre est치tico
        contenedorEstatico.addEventListener('click', function(e) {
            
            // Verificamos si el elemento clicado TIENE la clase de nuestros botones
            // 'e.target' es el elemento exacto que fue clicado
            if (e.target.classList.contains('abrir-modal-plato')) {
                e.preventDefault(); 
                
                // Obtenemos la informaci칩n del bot칩n que gener칩 el evento
                const platoId = e.target.getAttribute('data-id');
                console.log(`Delegaci칩n exitosa: Editando plato ID: ${platoId}`);
                
                modalP.style.display = "flex";
                // Llama a tu funci칩n para cargar los datos aqu칤:
                // cargarDatosPlato(platoId);
            }
        });
    }

    // El resto de la l칩gica de cierre (para la X y clic fuera) se mantiene:
    
    // 2. Cerrar el modal al hacer clic en la 'x'
    if (btnCerrarP && modalP) {
        btnCerrarP.addEventListener('click', function(e) {
            e.preventDefault();
            modalP.style.display = "none";
        });
    }

    // 3. Cerrar el modal si el usuario hace clic fuera del contenido
    if (modalP) {
        window.addEventListener('click', function(event) {
            if (event.target === modalP) {
                modalP.style.display = "none";
            }
        });
    }
});

// Esto se ejecuta por cada registro de plato
foreach ($platos as $plato) {
    echo '<tr>';
    echo '<td>' . htmlspecialchars($plato['nombre']) . '</td>';
    echo '<td>';
    
    // 游띔 CLAVE: El CLASS es fijo para el JS.
    // 游띔 CLAVE: El DATA-ID toma el ID 칔NICO de la base de datos ($plato['id']).
    echo '<button class="abrir-modal-plato" data-id="' . $plato['id'] . '">';
    echo 'Editar';
    echo '</button>';
    
    echo '</td>';
    echo '</tr>';
}











<!-- ver lista de pedidos -->
<div class="lista-pedidos">
    <h2>Lista de Pedidos</h2>
    <table>
        <thead>
            <tr>
                <th>ID Pedido</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <?php
            // Conexi칩n a la base de datos
            $conn = new mysqli('localhost', 'root', '', 'restaurante');

            // Verificar conexi칩n
            if ($conn->connect_error) {
                die("Conexi칩n fallida: " . $conn->connect_error);
            }

            // Consulta para obtener los pedidos
            $sql = "SELECT id, cliente, fecha, total, estado FROM pedidos";
            $result = $conn->query($sql);

            if ($result->num_rows > 0) {
                // Mostrar datos de cada pedido
                while($row = $result->fetch_assoc()) {
                    echo "<tr>
                            <td>" . $row["id"]. "</td>
                            <td>" . $row["cliente"]. "</td>
                            <td>" . $row["fecha"]. "</td>
                            <td>" . $row["total"]. "</td>
                            <td>" . $row["estado"]. "</td>
                            <td><a href='ver_pedido.php?id=" . $row["id"] . "'>Ver</a> | 
                                <a href='eliminar_pedido.php?id=" . $row["id"] . "' onclick='return confirm(\"쮼st치s seguro de eliminar este pedido?\")'>Eliminar</a></td>
                          </tr>";
                }
            } else {
                echo "<tr><td colspan='6'>No hay pedidos registrados</td></tr>";
            }
            $conn->close();
            ?>
        </tbody>
    </table>
</div>


